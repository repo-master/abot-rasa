{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Train Rasa model",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "rasa",
        "train"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Generate NLU from Chatette",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "chatette",
        "-f",
        ".\\projects\\Sensor\\sensor_query.chatette",
        "-o",
        ".\\projects\\Sensor\\data\\nlu\\chatette"
      ],
      "problemMatcher": []
    }
  ]
}
